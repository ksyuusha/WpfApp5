<Window x:Class="SortingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сортировка чисел" Height="400" Width="400">
    <Grid>
        <ComboBox x:Name="SortMethodComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10">
            <ComboBoxItem Content="Сортировка пузырьком" />
            <ComboBoxItem Content="Быстрая сортировка" />
        </ComboBox>
        <TextBox x:Name="InputNumbersTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,50,0,0" />
        <Button x:Name="SortButton" Content="Сортировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,100,0,0" Click="SortButton_Click" />
        <TextBlock x:Name="SortedNumbersTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="60" Margin="10,150,0,0"/>
    </Grid>
</Window>
